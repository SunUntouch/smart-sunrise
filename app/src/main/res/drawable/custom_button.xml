<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor = "@color/buttonBackgroundColorStart"
                android:endColor   = "@color/buttonBackgroundColorEnd"
                android:angle      = "90" />
            <stroke
                android:width = "2dp"
                android:color = "@color/colorAccent" />
            <corners
                android:radius = "@dimen/button_corners" />
            <padding
                android:left   = "@dimen/button_padding"
                android:top    = "@dimen/button_padding"
                android:right  = "@dimen/button_padding"
                android:bottom = "@dimen/button_padding" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor   = "@color/buttonBackgroundColorEnd"
                android:startColor = "@color/buttonBackgroundColorStart"
                android:angle      = "270" />
            <stroke
                android:width = "2dp"
                android:color = "@color/colorPrimary" />
            <corners
                android:radius = "@dimen/button_corners" />
            <padding
                android:left   = "@dimen/button_padding"
                android:top    = "@dimen/button_padding"
                android:right  = "@dimen/button_padding"
                android:bottom = "@dimen/button_padding" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor = "@color/buttonBackgroundColorStart"
                android:endColor   = "@color/buttonBackgroundColorEnd"
                android:angle      = "45" />
            <stroke
                android:width = "1dp"
                android:color = "@color/borderColor" />
            <corners
                android:radius = "@dimen/button_corners" />
            <padding
                android:left   = "@dimen/button_padding"
                android:top    = "@dimen/button_padding"
                android:right  = "@dimen/button_padding"
                android:bottom = "@dimen/button_padding" />
        </shape>
    </item>

</selector>