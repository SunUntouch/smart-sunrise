<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/wakeup_timer_layout_time">

    <TextView
        android:id="@+id/wakeup_timer_time_text_view"
        android:textColor="@color/buttonTextColorPrimary"
        android:textColorHighlight="@color/buttonTextColorSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/custom_textview"/>

    <Button
        android:id="@+id/wakeup_timer_time_buttonTime"
        android:text="00:00"
        android:textColor="@color/buttonTextColorPrimary"
        android:textColorHighlight="@color/buttonTextColorSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:onClick="showTimeSettingsDialog"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/wakeup_timer_time_buttonSnooze"
        android:text="SNOOZE 10 Minutes"
        android:textColor="@color/buttonTextColorPrimary"
        android:textColorHighlight="@color/buttonTextColorSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:onClick="showMinuteSettingDialog"
        android:background="@drawable/custom_button"/>
</LinearLayout>
