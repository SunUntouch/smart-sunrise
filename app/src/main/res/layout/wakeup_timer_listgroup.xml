<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/custom_groupview">

    <TextView
        android:id="@+id/wakeup_timer_groupItem"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="start"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="30sp"
        android:textColor="?attr/colorAccent"
        android:textStyle="bold"
        android:onClick="showNameSettingDialog"
        android:background="@drawable/custom_textview_transparent"
        android:shadowColor="?attr/colorPrimaryDark"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="5.6"
        android:maxWidth="170dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="false"
        android:minWidth="20dp">

        <TextView
            android:id="@+id/wakeup_group_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:textColor="?attr/colorAccent"
            android:textSize="20sp"
            android:alpha="0.7"
            android:background="@drawable/custom_textview_transparent"
            android:shadowColor="?attr/colorPrimaryDark"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="4.6"/>

        <TextView
            android:id="@+id/wakeup_group_days"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/colorAccent"
            android:textSize="15sp"
            android:layout_gravity="end"
            android:alpha="0.7"
            android:background="@drawable/custom_textview_transparent"
            android:shadowColor="?attr/colorPrimaryDark"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="4.6"/>

    </LinearLayout>
</LinearLayout>
