<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/wakeup_timer_layout_music">

    <TextView
        android:id="@+id/wakeup_timer_music_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dip"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"/>

    <Button
        android:id="@+id/wakeup_timer_music_buttonMusic"
        android:text="Choose Music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/wakeup_timer_music_buttonVibration"
        android:text="Set Vibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
