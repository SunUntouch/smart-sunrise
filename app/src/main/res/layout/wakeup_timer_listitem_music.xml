<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/wakeup_timer_layout_music">

    <TextView
        android:id="@+id/wakeup_timer_music_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dip"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wakeup_timer_music_buttonMusic"
            android:text="Choose Music"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:onClick="showMusicSettingDialog"/>

        <Button
            android:id="@+id/wakeup_timer_music_buttonMusicVolume"
            android:text="100%"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showMusicVolumeSettingDialog"/>

        <TextView
            android:text="Start Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/wakeup_timer_music_SongStart"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="showMusicStartSettingDialog"/>

        <TextView
            android:text="Fade In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ToggleButton
            android:id="@+id/wakeup_timer_music_toggleFadeIn"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showFadeInSettingsDialog"/>

        <TextView
            android:text="Vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ToggleButton
            android:id="@+id/wakeup_timer_music_toggleVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showVibrationSettingDialog"/>
    </GridLayout>

</LinearLayout>
